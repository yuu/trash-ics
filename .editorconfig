[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 8

[Makefile]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 8
tab_width = 8

[*.md]
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.js]
indent_size = 2
